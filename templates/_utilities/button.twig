{% macro button(variant = 'primary', size = "md", label, url = null, target = '_self', noHover = false, class = '') %}
	{% if url %}
		<a href="{{ url }}" target="{{ target }}"
      class="font-secondary font-[900] leading-5 no-underline {{ variant == 'primary' ? 'bg-vividBlue text-white' : 'bg-lightSkyBlue text-black' }}
      uppercase px-4 py-2 rounded-[52px] transition-all duration-300 inline-flex items-center justify-center {{ noHover ? '' : 'hover:bg-lightSkyBlue hover:text-black' }}
      {{ size == 'md' ? 'text-base md:text-lg md:px-6 md:py-2' : 'text-lg md:text-xl xl:px-6 xl:py-3' }} {{ class }}"
    >
			{{ label }}
		</a>
	{% else %}
		<button
      class="font-secondary font-[900] leading-5 no-underline {{ variant == 'primary' ? 'bg-vividBlue text-white' : 'bg-lightSkyBlue text-black' }}
      uppercase px-4 py-2 rounded-[52px] transition-all duration-300 inline-flex items-center justify-center {{ noHover ? '' : 'hover:bg-lightSkyBlue hover:text-black' }}
      {{ size == 'md' ? 'text-base md:text-lg md:px-6 md:py-2' : 'text-lg md:text-xl xl:px-6 xl:py-3' }} {{ class }}"
    >
			{{ label }}
		</button>
	{% endif %}
{% endmacro %}