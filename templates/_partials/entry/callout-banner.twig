{% if block.alignment == 'right' %}
  {% set alignmentClasses = 'md:flex-row-reverse' %}
{% else %}
  {% set alignmentClasses = ' md:flex-row' %}
{% endif %}

<div class="flex flex-col gap-6 {{ alignmentClasses }} md:items-center md:gap-10 bg-white rounded-lg shadow-xl shadow-mpaLightBlue/5 p-6 md:p-10">
  {% if block.image|length %}
    {% set image = block.image.one() %}
    <div class="md:basis-1/4">
      <img src="{{ image.url }}" alt="{{ image.alt }}" width="{{ image.width }}" height="{{ image.height }}" class="w-full h-auto aspect-[5/3] md:aspect-[4/3] object-cover block rounded-md shadow-md" />
    </div>
  {% endif %}
  <div {% if block.image|length %}class="md:basis-3/4"{% endif %}>
    {% if block.title %}
      <h2>{{ block.title }}</h2>
    {% endif %}
    {{ block.richText_field | raw }}
    {% if block.button.link_field %}
      <a 
        href="{{ block.button.link_field }}"
        class="inline-block px-6 py-3 bg-mpaDarkBlue text-white no-underline italic font-semibold rounded-full hover:bg-mpaLightBlue hover:text-white"
      >
        {{ block.button.text_field }}
      </a>
    {% endif %}
  </div>
</div>