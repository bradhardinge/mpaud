{% import '_utilities/image' as img %}

{# {{ dump(entry.cards) }} #}

<section class="mx-auto my-10 md:my-14 lg:my-16">
	<div class="grid grid-cols-1 lg:grid-cols-2 gap-6 lg:gap-10">
		{% for card in entry.cards %}
			{% set cardImage = card.image.eagerly().one() %}
			{% set cardImageUrl = cardImage ? cardImage.url : '' %}

			<a href="{{ card.button.url }}" class="w-full min-h-[340px] lg:min-h-[400px] no-underline py-12 relative bg-cover bg-center group duration-200 ease-linear cursor-pointer rounded-md shadow-section overflow-hidden" style="background-image: url('{{ cardImageUrl }}')">
				<div class="absolute inset-0 z-10 group-hover:!bg-lightSkyBlueHover group-hover:!opacity-90 transition-all duration-300" style="background-color: {{ card.overlayColor }}; opacity: {{ card.overlayOpacity }}%;"></div>
				<div class="max-w-full h-full mx-auto flex flex-col justify-center items-center z-20 relative p-4 md:p-6 text-center">
					<div>
						<img src="/assets/icons/tennis-ball-icon.png" height="41" width="40" alt="Tennis Ball Icon">
					</div>
					<h2 class="font-secondary font-extrabold text-white leading-10 uppercase mt-3 md:mt-4 mb-0 after:content-none">
						{{ card.title }}
					</h2>
					<div class="font-primary text-base text-white leading-5 mt-4 mb-6 md:mb-7 [&>p]:last-of-type:mb-0">
						{{ card.description }}
					</div>
					<!-- group-hover:bg-white group-hover:text-black -->
					<button class="font-secondary font-[900] text-black text-base md:text-lg leading-5 bg-lightSkyBlue uppercase px-4 py-2 md:px-4 md:py-2 xl:px-6 xl:py-3 rounded-[52px]  transition-all duration-300">
						{{ card.button.label }}
					</button>
				</div>
			</a>

		{% endfor %}
	</div>
</section>
