{% if block.title %}<h2 class="text-center">{{ block.title }}</h2>{% endif %}
{% if block.locations|length %}
<div class="flex flex-col md:flex-row gap-6">
  <div class="flex flex-col justify-center bg-white rounded-lg shadow-xl shadow-mpaLightBlue/5 p-6 w-full md:p-10 md:w-[calc(33.333%-0.75rem)]">
    {% for location in block.locations %}
      <div class="flex items-center gap-3 mb-2">
        {% if location.title %}
          <h3 class="m-0">{{ location.title }}</h3>
        {% endif %}
        {% if location.text_field %}
          <span class="inline-block px-3 py-2 text-sm leading-none font-semibold rounded-md bg-mpaYellow/30">{{ location.text_field }}</span>
        {% endif %}        
      </div>
      {{ location.richText_field | raw }}
    {% endfor %}
  </div>
  <div class="w-full md:w-[calc(66.666%-0.75rem)] rounded-lg overflow-hidden shadow-xl shadow-mpaLightBlue/5">
    <script src="https://elfsightcdn.com/platform.js" async></script>
    <div class="elfsight-app-06adb014-d318-414c-b263-1c40c4aac57a" data-elfsight-app-lazy></div>
  </div>
</div>
{% endif %}