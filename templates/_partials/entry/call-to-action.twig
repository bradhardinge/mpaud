<div class="bg-mpaDarkBlue text-white rounded-lg shadow-xl shadow-mpaLightBlue/5 p-6 md:p-8">
  <div class="flex flex-col sm:flex-row gap-2 sm:gap-6 items-center justify-center">
    {% if block.icon %}
      {% set icon = block.icon.one() %}
      <img src="{{ icon.url }}" alt="{{ icon.alt }}" width="{{ icon.width }}" height="{{ icon.height }}" class="w-auto h-12 md:h-16 block mx-auto" />
    {% endif %}
    {% if block.title %}
      <span class="font-bold text-lg">{{ block.title }}</span>
    {% endif %}
    {{ block.richText_field | raw }}
    {% if block.button.link_field %}
      <a 
        href="{{ block.button.link_field }}"
        class="inline-block flex gap-3 items-center px-6 py-5 bg-white text-mpaDarkBlue no-underline italic font-semibold rounded-full hover:bg-mpaLightBlue hover:text-white"
      >
        {% if block.button.link_field|slice(0, 4) == 'tel:' %}
          <svg width="18" height="18" viewBox="0 0 18 18" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
            <path d="M6.7923 1.4807L7.52242 2.78899C8.18133 3.96966 7.91685 5.5185 6.87904 6.55629C6.87904 6.55629 5.62036 7.81517 7.90256 10.0975C10.1841 12.379 11.4437 11.121 11.4437 11.121C12.4815 10.0832 14.0303 9.81869 15.211 10.4776L16.5193 11.2077C18.3022 12.2027 18.5127 14.7029 16.9456 16.27C16.004 17.2116 14.8504 17.9444 13.5753 17.9926C11.4286 18.0741 7.78308 17.5308 4.12616 13.8739C0.469273 10.2169 -0.0740114 6.57139 0.00737108 4.42474C0.0557123 3.14956 0.788402 1.99601 1.73004 1.05439C3.29711 -0.512686 5.79731 -0.30213 6.7923 1.4807Z" fill="currentColor"/>
          </svg>
        {% endif %}
        <span>
          {{ block.button.text_field }}
        </span>
      </a>
    {% endif %}
  </div>
</div>