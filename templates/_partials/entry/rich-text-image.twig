{% if block.alignment == 'right' %}
  {% set alignmentClasses = 'md:flex-row-reverse' %}
{% else %}
  {% set alignmentClasses = ' md:flex-row' %}
{% endif %}

<div class="flex flex-col gap-6 {{ alignmentClasses }} md:items-start md:gap-10">
  {% if block.image|length %}
    {% set image = block.image.one() %}
    {% if image %}
      <div class="md:basis-1/3">
        <img 
          src="{{ image.url }}" alt="{{ image.alt }}" width="{{ image.width }}" height="{{ image.height }}" 
          {% if block.imageStyle == "logo" %}
            class="w-56 h-auto mx-auto" 
          {% else %}
            class="w-full h-auto aspect-[5/3] md:aspect-[4/3] object-cover block rounded-md shadow-md" 
          {% endif %}
        />
      </div>
    {% endif %}    
  {% endif %}
  <div {% if block.image|length %}class="md:basis-2/3"{% endif %}>
    {% if block.title %}
      <h2>{{ block.title }}</h2>
    {% endif %}
    {{ block.richText_field | raw }}
  </div>
</div>